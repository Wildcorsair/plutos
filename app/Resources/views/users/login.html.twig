{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">

            {% if error is defined %}
                <div class="col-md-4 col-md-offset-3 alert-danger">{{ error }}</div>
            {% endif %}

            <div class="col-md-4 col-md-offset-3">
                {{ form_start(login) }}
                {{ form_widget(login) }}
                {{ form_end(login) }}
            </div>

        </div>
    </div>
{% endblock %}