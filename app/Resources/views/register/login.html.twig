{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">

            {% if error is defined %}
                <div class="col-md-4 col-md-offset-4 alert-danger">{{ error }}</div>
            {% endif %}

            <div class="col-md-4 col-md-offset-4 m-t-20">
                {{ form_start(login) }}
                    {{ form_row(login._username) }}
                    {{ form_row(login._password) }}
                    <button class="btn btn-success m-t-10" type="submit">Sign In</button>
                    <a class="pull-right m-t-20" href="{{ path('home') }}">Back</a>
                {{ form_end(login) }}
            </div>

        </div>
    </div>
{% endblock %}